
int id = 0;
private void silme_Click(object sender, EventArgs e)
{
   baglanti.Open();
   SqlCommand kmt = new SqlCommand("delete from sınıf1 where id =(" + id + ")" ,baglanti);
   kmt.ExecuteNonQuery();
   baglanti.Close();
   goster();
}

MOUSE İLE ID KISMINDAN TIKLAYIP SEÇME*TEXTBOXTA DEĞERLER GÖZÜKÜR*


private void listView1_MouseDoubleClick(object sender, MouseEventArgs e) //listview anahtardan bak doubleclıck
{
    id = int.Parse(listView1.SelectedItems[0].SubItems[0].Text);   //id temsil eder
    textBox1.Text=listView1.SelectedItems[0].SubItems[0].Text;   //id temsil eden label yaz
    textBox2.Text = listView1.SelectedItems[0].SubItems[1].Text;
    textBox3.Text = listView1.SelectedItems[0].SubItems[2].Text;
    textBox4.Text = listView1.SelectedItems[0].SubItems[3].Text;
    textBox5.Text = listView1.SelectedItems[0].SubItems[4].Text;

}
